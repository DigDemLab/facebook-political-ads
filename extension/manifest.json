{
  "manifest_version": 2,
  "name": "Facebook Political Ad Collector (YouGov)",
  "short_name": "Facebook PAC",
  "description": "This extension collects ads on Facebook and is only for panel participants.",
  "version": "1.7.5",
  "default_locale": "en",
  "permissions": [
    "https://projects.propublica.org/facebook-ads/*",
    "unlimitedStorage",
    "tabs",
    "*://*.yougov.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/icon128bg.png",
    "default_title": "Facebook Political Ad Collector for YouGov Panel Participants",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.facebook.com/*"
      ],
      "exclude_globs": [
        "*://*.facebook.com/ads/archive/*"
      ]
    },
    {
      "js": [
        "yg.js"
      ],
      "matches": [
        "*://*.yougov.com/*"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "fbpac-yg@propublica.org",
      "update_url": "https://pp-projects-static.s3.amazonaws.com/fbpac/updates.json"
    }
  } 
}
